{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "./client/src/**/*",
    "./functions/src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}